<div class="container login-container">
    <div class="row">
        <div class="col-md-4 col-s-4 col-xs-4"></div>
        <div class="col-md-4 col-s-4 col-xs-4 login-form-1">
            <h3> Login </h3>
            <hr>
            <form action="/login/submit" method="POST">
                <div class="form-group">
                    <input name="username" type="text" class="form-control" placeholder="Username" value="" />
                </div>
                <div class="form-group">
                    <input name="password" type="password" class="form-control" placeholder="Password" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit w-100" value="Login" />
                </div>
                {{#if message}}
                <div class="container">
                    <div class="notice notice-danger" id="notify">
                        <strong> Message: </strong> <br> {{message}}
                    </div>
                </div>
                {{/if}}
                <div class="form-group">
                    <a href="/forgot" class="ForgetPwd" value="Login">Forget Password?</a>
                </div>
                <a href="/" class="ForgetPwd"> Signup </a>
            </form>
        </div>
    </div>
</div>
<script>
    if (document.getElementById("notify")) {
        setTimeout(() => {
            document.getElementById("notify").hidden = true;
        }, 3000);
    }
</script>