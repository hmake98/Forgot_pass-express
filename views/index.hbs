<div class="container login-container">
    <div class="row">
        <div class="col-md-4 col-s-4 col-xs-4"></div>
        <div class="col-md-4 col-s-4 col-xs-4 login-form-2">
            <h3> Sign up </h3>
            <hr>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="uname"> Username </label>
                    <input id="uemail" name="username" type="text" class="form-control" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="uemail"> Email </label>
                    <input id="uemail" name="email" type="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label for="upass"> Password </label>
                    <input id="upass" name="password" type="password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit w-100" value="Signup" />
                </div>
                {{#if message}}
                <div class="container">
                    <div class="notice notice-danger" id="notify">
                        <strong> Message: </strong> <br> {{message}}
                    </div>
                </div>
                {{/if}}
                <hr>
                <a href="/login" class="ForgetPwd"> Login </a>
            </form>
        </div>
    </div>
</div>
<script>
    if (document.getElementById("notify")) {
        setTimeout(() => {
            document.getElementById("notify").hidden = true;
        }, 3000);
    }
</script>